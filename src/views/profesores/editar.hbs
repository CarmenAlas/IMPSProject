<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/profesores/editar/{{profesor.idprofesor}}" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idprofesor" placeholder="Código del profesor" value="{{profesor.idprofesor}}" autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre del profesor" value="{{profesor.nombre}}" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido del profesor" value="{{profesor.apellido}}" />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" name="fecha_nacimiento" placeholder="Fecha de nacimiento" value="{{profesor.fecha_nacimiento}}" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="profesion" placeholder="Profesión del profesor" value="{{profesor.profesion}}" />
                </div>
                <div class="form-group">
                   <input type="text" class="form-control" name="genero" placeholder="genero del profesor" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Correo del profesor" value="{{profesor.email}}" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
